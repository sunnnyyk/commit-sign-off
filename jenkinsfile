pipeline {
    agent any
    environment {
        GIT_REPO = 'https://github.com/OT-MICROSERVICES/notification-worker.git'
        BRANCH_NAME = 'main'  // Aapke repo ka default branch
    }
    stages {
        stage('Checkout') {
            steps {
                // Clone the repo from the specified branch
                git branch: "${BRANCH_NAME}", url: "${GIT_REPO}"
            }
        }

        stage('Check Commit Sign-off') {
            steps {
                script {
                    // Get the latest commit message
                    def lastCommitMessage = sh(script: "git log -1 --pretty=%B", returnStdout: true).trim()
                    
                    // Fail if 'Signed-off-by:' is missing
                    if (!lastCommitMessage.contains("Signed-off-by:")) {
                        error("The latest commit is missing 'Signed-off-by:'. Build failed.")
                    } else {
                        echo "Commit sign-off verified."
                    }
                }
            }
        }
    }
}
