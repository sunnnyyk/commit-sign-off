pipeline {
    agent any
    environment {
        GIT_REPO = 'git@github.com:OT-MICROSERVICES/notification-worker.git'
        BRANCH_NAME = 'main'  // Adjust if your default branch is different
    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the specified branch
                    git branch: "${BRANCH_NAME}", url: "${GIT_REPO}"
                }
            }
        }
        stage('Check Commit Sign-off') {
            steps {
                script {
                    // Retrieve the latest commit message
                    def lastCommitMessage = sh(script: "git log -1 --pretty=%B", returnStdout: true).trim()

                    // Check for the presence of 'Signed-off-by:' in the commit message
                    if (!lastCommitMessage.contains("Signed-off-by:")) {
                        error("The latest commit is missing a 'Signed-off-by:' line. Please add it and push the changes.")
                    } else {
                        echo "Commit sign-off verified."
                    }
                }
            }
        }
    }
}
